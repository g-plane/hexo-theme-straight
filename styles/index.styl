body {
  font-family: 'Fira Sans', 'Source Sans Pro', system-ui, ui-sans-serif, sans-serif;
  font-size: 18px;
  line-height: 32px;
  max-width: 1000px;
  margin: 0 auto;
  background: #fbfbfb;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
}

a {
  text-decoration: none;
  color: #592ce5;
  overflow-wrap: break-word;
  word-break: break-all;
}
a[target='_blank'] span {
  display: none;
}

img,
video,
canvas,
iframe {
  max-width: 100%;
}

blockquote {
  margin: 0;
  padding: 0 8px;
  border-left: 4px solid #ccc;
  color: #999;
}

code {
  font-size: 16px;
  font-family: 'Fira Code', monospace;
}
